<Application x:Class="Clinic.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:Clinic.App.Views"
             xmlns:vms="clr-namespace:Clinic.App.ViewModels">
    <Application.Resources>
        <ResourceDictionary>

            <!-- GLOBAL STYLES -->
            <SolidColorBrush x:Key="CardBg" Color="#F7FAFF"/>
            <SolidColorBrush x:Key="CardBorder" Color="#D9E6FF"/>

            <Style x:Key="Card" TargetType="Border">
                <Setter Property="Background" Value="{StaticResource CardBg}"/>
                <Setter Property="BorderBrush" Value="{StaticResource CardBorder}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="10"/>
                <Setter Property="Padding" Value="20"/>
                <Setter Property="Margin" Value="0,0,16,16"/>
            </Style>

            <Style x:Key="FormLabel" TargetType="TextBlock">
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Margin" Value="0,0,10,10"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
            </Style>

            <!-- alias so {StaticResource Label} works in all views -->
            <Style x:Key="Label" TargetType="TextBlock" BasedOn="{StaticResource FormLabel}" />

            <!-- VIEWMODEL → VIEW TEMPLATES -->
            <DataTemplate DataType="{x:Type vms:DashboardViewModel}">
                <views:DashboardView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:DoctorsViewModel}">
                <views:DoctorsView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:PatientsViewModel}">
                <views:PatientsView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:AppointmentsViewModel}">
                <views:AppointmentsView/>
            </DataTemplate>

        </ResourceDictionary>
    </Application.Resources>
</Application>
