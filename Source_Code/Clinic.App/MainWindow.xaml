<Window x:Class="Clinic.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Clinic — Dashboard" Height="540" Width="950"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="12"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left nav -->
        <StackPanel>
            <TextBlock Text="Clinic" FontSize="20" FontWeight="Bold" Margin="0,0,0,12"/>
            <Button Content="Dashboard" Command="{Binding ShowDashboardCommand}" Margin="0,0,0,6"/>
            <Button Content="Doctors" Command="{Binding ShowDoctorsCommand}" Margin="0,0,0,6"/>
            <Button Content="Patients" Command="{Binding ShowPatientsCommand}" Margin="0,0,0,6"/>
            <Button Content="Appointments" Command="{Binding ShowAppointmentsCommand}" />
        </StackPanel>

        <!-- Current view -->
        <ContentControl Grid.Column="2" Content="{Binding Current}"/>
    </Grid>
</Window>
